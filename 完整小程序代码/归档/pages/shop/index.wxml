
<view class="header">
    <text class="title">余额 ¥{{account||0}}元</text>
    <text class="recharge" bind:tap="charge">充值</text>
    <button class="contact" open-type="contact">微信客服</button>
    <view class="values" wx:if="{{recharge}}">
        <text bind:tap="buy" data-price="10" data-cut="0" class="value">10元</text>
        <text bind:tap="buy" data-price="20" data-cut="0.1" class="value">20元</text>
        <text bind:tap="buy" data-price="50" data-cut="1" class="value">50元</text>
        <text bind:tap="buy" data-price="100" data-cut="2" class="value">100元</text>
        <text bind:tap="buy" data-price="200" data-cut="5" class="value">200元</text>
        <text bind:tap="buy" data-price="500" data-cut="10" class="value">500元</text>
    </view>
</view>

<view class="items">
    <view class="item" wx:for="{{items}}" wx:key="{{item.id}}">
        <navigator url="./detail?id={{item.id}}" hover-class="none">
            <image src="{{item.cover}}"></image>
            <view class="meta">
                <text>{{item.name}}</text>
                <text>参考价: ¥{{item.cost}}元</text>
                <view class="wrap">
                    <text>挑战价格: ¥{{item.price}}元/次</text>
                    <text>免费挑战: {{item.stimes}}次</text>
                </view>
            </view>
        </navigator>
        <text class="start" bind:tap="play" data-ptimes="{{item.ptimes}}" data-cost="{{item.cost}}" data-stimes="{{item.stimes}}" data-gid="{{item.id}}" data-price="{{item.price}}">开始挑战</text>
    </view>
</view>