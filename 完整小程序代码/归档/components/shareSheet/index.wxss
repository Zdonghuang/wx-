
.share-mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;

    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    transition: all 0.4s;
}

.share-mask.up {
    background-color: rgba(0, 0, 0, 0.5);
}

.share-list {
    width: 750rpx;
    background-color: #EDEDED;
    transform: translate(0, 100%);
    transition: all 0.3s;

    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
}

.share-list.up {
    transform: translate(0);
}

button {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    border-radius: 0;
    border-top: 2rpx solid #EDEDED;   
}

button:last-child,
button:first-child {
    border: 0 none;
}

button::after {
    border: 0 none;
}

button:last-child {
    margin-top: 14rpx;
}

